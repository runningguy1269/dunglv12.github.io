
@{
    ViewBag.Title ="Delete";
    Layout = null;
}
@model MVCSample.Business.Entities.Category

<link href="~/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/global/plugins/owl-carousel/assets/js/jquery-1.9.1.min.js"></script>

<div class="container" style="width:60%;">


    <!-- Modal Header -->
    <div class="modal-header">
        <h4 class="modal-title">Bạn có muốn xóa không ?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        <table class="table table-responsive table-borderless">
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.category_id)</b>
                </td>
                <td>@Html.DisplayFor(model => model.category_id)</td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.category_name)</b>
                </td>
                <td>@Html.DisplayFor(model => model.category_name)</td>
            </tr>
        </table>
    </div>

    @using (Html.BeginForm())
    {

            <!-- Modal footer -->
    <div class="modal-footer">
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;
        @Html.ActionLink("Back to list","Index","",htmlAttributes:new { @class="btn btn-warning"})
    </div>

    }

</div>
