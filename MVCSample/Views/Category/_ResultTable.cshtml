@model IEnumerable<MVCSample.Business.Entities.Category>

@{

    Layout = null;

}

<link href="~/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/global/plugins/owl-carousel/assets/js/jquery-1.9.1.min.js"></script>




<div class="container">
    <div class="row">
        <div class="col-md-12">

            <table id="tblCate" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="bodyContent">
                    @foreach (var p in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(x => p.category_id)</td>
                            <td style="width:60%;">@Html.DisplayFor(x => p.category_name)</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = p.category_id }, new { @class = "btn btn-primary", @style = "color:white" })

                                @*@Html.ActionLink("Xóa", "Delete", "Category", new { id = p.category_id }, new { @class = "btn btn-danger" })*@
                                <a data-id="@p.category_id" class="btn btn-danger" style="color:white">Xóa</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>


            @*Trang @(pagedList.PageCount < pagedList.PageNumber ? 0 : pagedList.PageNumber) / @pagedList.PageCount
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))*@
        <ul class="pagination">
            @for (int i = 1; i <= @ViewBag.ToTalPage; i++)
            {
                
               @if (i != @ViewBag.CurrenPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:PagerClick(@i);">@i</a>
                        @*<a href="@Url.Action("Index", new { page = i })" class="btn btn-default" onclick="PagerClick(@i)">@i</a>*@
                    </li>
                }
                else
                {
                    <li class="page-item active">
                        <span>@i</span>
                    </li>

                }

            }


        </ul>

        </div>
    </div>
</div>
<script type="text/javascript">
    function PagerClick(index) {
        showTable();
    }
</script>

